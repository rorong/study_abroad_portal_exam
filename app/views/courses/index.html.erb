<div class="container-fluid mt-5">
  <div class="row">
    <!-- Sidebar Filters -->
    <div class="col-md-3">
      <%= render 'sidebar_filters' %>
    </div>
    
    <!-- Main Content Area -->
    <div class="col-md-9">
      <%= render 'search_bar' %>
      
      <%= turbo_frame_tag "courses_list" do %>
        <%= render 'courses_list', universities: @available_universities %>
      <% end %>
    </div>
  </div>
</div>

<%# Add a hidden form to preserve search query when filters are applied %>
<% if params[:query].present? %>
  <%= form_tag courses_path, method: :get, id: "preserve_query_form", style: "display: none;" do %>
    <%= hidden_field_tag :query, params[:query] %>
    <% params.except(:controller, :action, :query).each do |key, value| %>
      <%= hidden_field_tag key, value %>
    <% end %>
  <% end %>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Add event listeners to all filter forms to preserve the search query
      document.querySelectorAll('form[action*="courses"]').forEach(function(form) {
        if (form.id !== 'preserve_query_form') {
          form.addEventListener('submit', function(e) {
            // Don't prevent default submission
            // Just ensure the query parameter is included
            if (!form.querySelector('input[name="query"]')) {
              const queryInput = document.createElement('input');
              queryInput.type = 'hidden';
              queryInput.name = 'query';
              queryInput.value = '<%= params[:query] %>';
              form.appendChild(queryInput);
            }
          });
        }
      });
    });
  </script>
<% end %>

<% if @search_courses.present? %>
  <div class="mt-5">
    <h3 class="mb-4 text-primary fw-bold border-bottom pb-2">ðŸŽ“ Similar Courses You Might Like</h3>

    <div id="similarCoursesCarousel" class="carousel slide mx-5 position-relative" data-bs-ride="carousel" style="margin-left: 100px; margin-right: 100px;">
      <div class="carousel-inner">
        <% @search_courses.first(20).each_slice(4).with_index do |course_group, index| %>
          <div class="carousel-item <%= 'active' if index == 0 %>">
            <div class="row g-3">
              <% course_group.each do |course| %>
                <div class="col-md-3">
                  <div class="card h-100 shadow-sm border-0 rounded-4">
                    <div class="card-body d-flex flex-column justify-content-between">
                      <div>
                        <h6 class="card-title fw-semibold mb-2" style="min-height: 45px;"><%= truncate(course.name, length: 50) %></h6>
                        <% if course.universities.any? %>
                          <p class="text-muted mb-1 small">
                            <i class="bi bi-building"></i> <%= course.universities.first.name %>
                          </p>
                          <% if course.universities.first.country %>
                            <span class="badge bg-secondary"><%= course.universities.first.country %></span>
                          <% end %>
                        <% end %>
                      </div>
                      <%= link_to 'View Details', course_path(course), class: "btn btn-sm btn-outline-primary mt-3" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Carousel controls -->
      <button class="carousel-control-prev custom-control" type="button" data-bs-target="#similarCoursesCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next custom-control" type="button" data-bs-target="#similarCoursesCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
<% end %>

