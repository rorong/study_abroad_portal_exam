<div class="col-md-6 col-lg-4 mb-4">
  <div class="card h-100">
    <% if course.image.attached? %>
      <%= image_tag course.image, class: "card-img-top", alt: course.name %>
    <% else %>
      <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
        <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
      </div>
    <% end %>
    
    <div class="card-body">
      <h5 class="card-title"><%= course.name %></h5>
      <p class="card-text text-muted">
        <small>
          <i class="bi bi-building"></i> <%= course.institution.name %><br>
          <i class="bi bi-geo-alt"></i> <%= course.institution.city %>, <%= course.institution.country %>
        </small>
      </p>
      
      <div class="mb-3">
        <% course.tags.each do |tag| %>
          <span class="badge bg-light text-dark me-1"><%= tag.name %></span>
        <% end %>
      </div>
      
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <span class="badge bg-primary"><%= course.level %></span>
          <span class="badge bg-info"><%= course.duration %> years</span>
        </div>
        <%= link_to "View Details", course_path(course), class: "btn btn-outline-primary btn-sm" %>
      </div>
    </div>
    
    <div class="card-footer bg-white">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <strong>Application Fee:</strong><br>
          <%= number_to_currency(course.application_fee, unit: @current_currency || 'USD') %>
        </div>
        <div class="text-end">
          <strong>Intake:</strong><br>
          <%= course.intake %>
        </div>
      </div>
    </div>
  </div>
</div> 