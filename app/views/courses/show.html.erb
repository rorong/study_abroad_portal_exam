<style>
  body {
    font-family: 'Inter', sans-serif;
    background: linear-gradient(145deg, #e0e7ff, #f0f4ff);
    background-attachment: fixed;
    background-size: cover;
    color: #1f2937;
  }

  .card {
    background: white;
    border-radius: 1.5rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.08);
  }

  .badge {
    font-size: 0.85rem;
    padding: 0.5em 0.75em;
    border-radius: 999px;
  }

  h1, h2, h5, h6 {
    font-weight: 600;
  }

  .icon-text {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-lg {
    font-size: 1rem;
    padding: 0.75rem 1.25rem;
    border-radius: 0.75rem;
  }
</style>
<div class="container py-5">
  <div class="mb-4">
    <%= back_button %>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4 p-4">
        <div class="card-body">
          <h1 class="mb-3"><%= @course.name %></h1>

          <% if @course.title.present? %>
            <h2 class="h5 text-muted mb-4"><%= @course.title %></h2>
          <% end %>

          <div class="row mb-4">
            <div class="col-md-6">
              <div class="icon-text mb-3">
                <i class="fas fa-graduation-cap text-primary"></i>
                <div>
                  <h6 class="mb-0">Department</h6>
                  <p class="mb-0"><%= @department.name %></p>
                </div>
              </div>
            </div>
          </div>

          <div class="row mb-4">
            <div class="col-md-6">
              <div class="icon-text mb-3">
                <i class="fas fa-clock text-primary"></i>
                <div>
                  <h6 class="mb-0">Duration</h6>
                  <p class="mb-0"><%= @course.course_duration %> months</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="icon-text mb-3">
                <i class="fas fa-calendar text-primary"></i>
                <div>
                  <h6 class="mb-0">Intake</h6>
                  <p class="mb-0"><%= @course.intake || "Not specified" %></p>
                </div>
              </div>
            </div>
          </div>

          <div class="row mb-4">
            <div class="col-md-6">
              <div class="icon-text mb-3">
                <i class="fas fa-truck text-primary"></i>
                <div>
                  <h6 class="mb-0">Delivery Method</h6>
                  <p class="mb-0"><%= @course.delivery_method || "Not specified" %></p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="icon-text mb-3">
                <i class="fas fa-briefcase text-primary"></i>
                <div>
                  <h6 class="mb-0">Internship Period</h6>
                  <p class="mb-0"><%= @course.internship_period || "Not specified" %></p>
                </div>
              </div>
            </div>
          </div>

          <% if @course.tuition_fee_international.present? %>
            <div class="row mb-4">
              <div class="col-md-6">
                <div class="icon-text mb-3">
                  <div>
                    <h6 class="mb-0">Tuition Fee (International)</h6>
                    <p class="mb-0"><%= format_currency(convert_currency(@course.tuition_fee_international)) %></p>
                  </div>
                </div>
              </div>
              <% if @course.application_fee.present? %>
                <div class="col-md-6">
                  <div class="icon-text mb-3">
                    <div>
                      <h6 class="mb-0">Application Fee</h6>
                      <p class="mb-0"><%= format_currency(convert_currency(@course.application_fee)) %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>

          <% if @tags.any? %>
            <div class="mb-4">
              <h6 class="mb-3">Tags</h6>
              <div class="d-flex flex-wrap gap-2">
                <% @tags.each do |tag| %>
                  <span class="badge bg-primary"><%= tag.tag_name %></span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card mb-4 p-4">
        <div class="card-body">
          <h5 class="mb-4">Universities</h5>
          <% @universities.each do |university| %>
            <div class="mb-4">
              <h6 class="mb-2"><%= university.name %></h6>
              <% if university.country.present? %>
                <p class="text-muted mb-1"><i class="fas fa-globe me-2"></i><%= university.country %></p>
              <% end %>
              <% if university.address.present? %>
                <p class="text-muted mb-1"><i class="fas fa-map-marker-alt me-2"></i><%= university.address %></p>
              <% end %>
              <% if university.world_ranking.present? %>
                <p class="text-muted mb-1"><i class="fas fa-trophy me-2"></i>World Ranking: <%= university.world_ranking %></p>
              <% end %>
              <% if university.qs_ranking.present? %>
                <p class="text-muted mb-1"><i class="fas fa-star me-2"></i>QS Ranking: <%= university.qs_ranking %></p>
              <% end %>
              <% if university.national_ranking.present? %>
                <p class="text-muted mb-1"><i class="fas fa-flag me-2"></i>National Ranking: <%= university.national_ranking %></p>
              <% end %>
              <% if university.established_in.present? %>
                <p class="text-muted mb-1"><i class="fas fa-calendar-alt me-2"></i>Established: <%= university.established_in %></p>
              <% end %>
              <% if university.total_students.present? %>
                <p class="text-muted mb-1"><i class="fas fa-users me-2"></i>Total Students: <%= number_with_delimiter(university.total_students) %></p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <% if @course.course_weblink.present? %>
        <div class="d-grid">
          <a href="<%= @course.course_weblink %>" target="_blank" class="btn btn-primary btn-lg">
            <i class="fas fa-external-link-alt me-2"></i>Visit Course Website
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
